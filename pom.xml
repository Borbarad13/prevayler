<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <properties>
    <prevayler.version>2.4-SNAPSHOT</prevayler.version>
  </properties>

  <groupId>org.prevayler</groupId>
  <artifactId>prevayler</artifactId>
  <version>${prevayler.version}</version>
  <packaging>pom</packaging>

  <name>Prevayler</name>
  <description>Prevayler is the open source Java prevalence layer.</description>
  <url>http://www.prevayler.org/</url>
  <inceptionYear>2001</inceptionYear>

  <modules>
    <module>core</module>
    <module>tests</module>
    <module>factory</module>
    <module>extras/skaringa</module>
    <module>extras/xstream</module>
    <module>extras/log4j</module>
    <module>spikes/mirror</module>
    <module>spikes/mirror-tests</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.prevayler</groupId>
        <artifactId>prevayler-core</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.prevayler</groupId>
        <artifactId>prevayler-factory</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.prevayler</groupId>
        <artifactId>prevayler-tests</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.prevayler.extras</groupId>
        <artifactId>prevayler-skaringa</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.prevayler.extras</groupId>
        <artifactId>prevayler-xstream</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.prevayler.extras</groupId>
        <artifactId>prevayler-log4j</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.prevayler.spikes</groupId>
        <artifactId>prevayler-mirror</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.prevayler.spikes</groupId>
        <artifactId>prevayler-mirror-tests</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>
